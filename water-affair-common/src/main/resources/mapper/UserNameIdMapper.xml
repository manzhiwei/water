<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.welltech.waterAffair.repository.UserNameIdMapper">
    <resultMap id="BaseResultMap" type="com.welltech.waterAffair.domain.entity.UserNameId">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="userName" jdbcType="VARCHAR" property="userName" />
        <result column="version" jdbcType="VARCHAR" property="version" />
    </resultMap>
    <insert id="save" parameterType="com.welltech.waterAffair.domain.entity.UserNameId">
        insert into userNameId (id, userName, version)
        values (#{id}, #{userName},#{version})
    </insert>
    <!--<select id="findAll" resultMap="com.welltech.waterAffair.domain.entity.UserNameId">-->
        <!--select *ã€€from userNameId-->
    <!--</select>-->
    <select id="findOneById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        *
        from
        userNameId
        where
        id = #{id}
        limit 1
    </select>

    <select id="findAll" resultMap="BaseResultMap" >
        select
        id,userName
        from
        userNameId
    </select>


</mapper>